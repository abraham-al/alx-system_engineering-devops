global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend abrahamdesign-tech-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/www.abrahamdesign.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend th3gr00t-tech-backend

backend abrahamdesign-tech-backend
	balance roundrobin
	server 15722-web-01 44.200.24.16:80 check
    server 15722-web-02 44.192.95.149:80 check